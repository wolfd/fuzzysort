{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018", "dom"],
    "module": "umd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": ".",
    "rootDir": ".",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
